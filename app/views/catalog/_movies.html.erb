<dl id = 'movies'>
  <% for movie in @movies %>
    <dt>
      <%= link_to movie.title, :action => 'show', :id => movie %>
      <%= link_to '+', :controller => 'cart', :action => 'add', :id => movie %>
    </dt>
    <% for director in movie.directors %>
      <dd><%= director.last_name %>, <%= director.first_name %></dd>
    <% end %>
    <dd><%= sprintf("%s. Precio: %.2f â‚¬", pluralize(movie.length, "minutos"), movie.price) %> </dd>
    <dd><small>Producer: <%= movie.producer.name %></small></dd>
  <% end %>
</dl>
