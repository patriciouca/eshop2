<dl>
  <dt>Title</dt>
  <dd><%= @movie.title %></dd>
  <dt>Publisher</dt>
  <dd><%= @movie.producer.name %></dd>
  <dt>Published at</dt>
  <dd><%= @movie.produced_at.strftime("%d/%m/%Y at %I:%M%p") %></dd>
  <dt>Authors</dt>
  <dd><%= @movie.director_names %></dd>
  <dt>ISBN</dt>
  <dd><%= @movie.serial_number %></dd>
  <dt>Blurb</dt>
  <%= RedCloth.new(@movie.blurb).to_html.html_safe if @movie.blurb %>
  <dt>Price</dt>
  <dd><%= @movie.price %></dd>
  <dt>Page count</dt>
  <dd><%= @movie.length %></dd>
  <dt>Cover image</dt>
  <% if @movie.cover_image.exists? then %>
    <dd><%= image_tag @movie.cover_image.url %></dd>
  <% else %>
    <dd><%= image_tag '/missing.png' %></dd>
    <p> There is no cover image attached. Please upload one. </p>
  <% end %>
</dl>

<%= link_to 'Edit', :action => 'edit', :id => @movie %> |
<%= link_to 'Back', :action => 'index' %>
