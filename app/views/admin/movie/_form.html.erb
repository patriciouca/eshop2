<% if @movie.errors.any? %>
  <div id="errorExplanation">
  <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
    <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <p><label for="movie_title">Title</label><br/>
  <%= text_field 'movie', 'title' %></p>
</div>

<div class="field">
  <p><label for="movie_producer">Producer</label><br/>
  <%= collection_select :movie, :producer_id, @producers, :id, :name %></p>
</div>
  
<div class="field">
  <p><label for="movie[director_ids][]">Directors</label><br/>
  <%= select_tag 'movie[director_ids][]', options_from_collection_for_select(@directors, :id, :name, 
      @movie.directors.collect{|director| director.id}), { :multiple => true, :size => 5 } %></p>
</div>

<div class="field"><p>
  <label for="movie_produced_at">Producido at</label><br/>
  <%= datetime_select 'movie', 'produced_at' %></p>
</div>

<div class="field">
  <p><label for="movie_serial_number">Numero de serie</label><br/>
  <%= text_field 'movie', 'serial_number' %></p>
</div>

<div class="field">
  <p><label for="movie_blurb">Blurb</label><br/>
  <%= text_area 'movie', 'blurb' %></p>
</div>

<div class="field">
  <p><label for="movie_price">Price</label><br/>
  <%= text_field 'movie', 'price' %></p>
</div>

<div class="field">
  <p><label for="movie_length">DUracion</label><br/>
  <%= text_field 'movie', 'length' %></p>
</div>

<div class="field">
  <% if @movie.cover_image.exists? then %>
    <dd><%= image_tag @movie.cover_image.url %></dd>
  <% else %>
    <p> There is no cover image attached. Please upload one. </p>
  <% end %>
  <p><label for="movie_cover_image">Cover image</label><br/>
  <%= file_field 'movie', :cover_image %></p>
</div>
