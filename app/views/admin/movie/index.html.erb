<table>
  <tr>
    <th><a href="?sort_by=producer_id">Publisher</a></th>
    <th><a href="?sort_by=title">Title</a></th>
    <th>Tags</th>
    <th><a href="?sort_by=serial_number">Numero de serie</a></th>
    <th colspan="3"></th>
  </tr>


<% @movies.each do |movie| %>
  <tr>
    <td><%= h movie.producer.name %></td>
    <td><%= h movie.title %></td>
    <td><%= h movie.serial_number %></td>
    <td><%= link_to 'Show', :action => 'show', :id => movie %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => movie  %></td>
    <td><%= button_to 'Delete', { :action => 'destroy', :id => movie },
                      data: { confirm: "Are you sure you want to delete movie #{movie.title}?" } %></td>
  </tr>
<% end %>


</table>
<br/>
<%= will_paginate @movies, :page_links => false, :link_separator => ' | ',
                          :previous_label => 'Previous page', :next_label => 'Next page' %>
                          
<p><%= link_to 'Add a new movie', :action => 'new' %></p>
