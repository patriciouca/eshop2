<dl>
  <dt>Nombre</dt>
  <dd><%= @user.name %></dd>

  <dt>Login</dt>
  <dd><%= @user.login %></dd>

  <dt>E-mail</dt>
  <dd><%= @user.email %></dd>

  <dt>Contador de identificación</dt>
  <dd><%= @user.login_count %></dd>

  <dt>Última peticion</dt>
  <dd><%= @user.last_request_at %></dd>

  <% if @user.last_login_at %>
    <dt>Last login at</dt>
    <dd><%= @user.last_login_at %></dd>
  <% end %>

  <dt>Identificado en</dt>
  <dd><%= @user.current_login_at %></dd>

  <% if @user.last_login_ip %>
    <dt>Última Ip de acceso</dt>
    <dd><%= @user.last_login_ip %></dd>
  <% end %>

  <dt>IP actual</dt>
  <dd><%= @user.current_login_ip %></dd>
</dl>

<%= link_to 'Editar', :action => 'edit' %>
